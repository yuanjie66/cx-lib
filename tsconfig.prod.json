{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["dom", "es2015", "es2017"],
      "jsx": "react",
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"],
        "@components/*": ["src/components/*"],
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  